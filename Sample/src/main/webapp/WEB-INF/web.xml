<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">


  <servlet>
    <display-name>SampleServlet</display-name>
    <servlet-name>SampleServlet</servlet-name>
    <servlet-class>com.js.sample.SampleServlet</servlet-class>
  </servlet>

  <!-- use pattern '/' so no additional url elements required -->
  <servlet-mapping>
    <servlet-name>SampleServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

<!--  Add a second servlet for test purposes? -->

 <servlet>
    <display-name>BetaServlet</display-name>
    <servlet-name>BetaServlet</servlet-name>
    <servlet-class>com.js.sample.BetaServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BetaServlet</servlet-name>
    <url-pattern>/Beta</url-pattern>
  </servlet-mapping>

</web-app>
